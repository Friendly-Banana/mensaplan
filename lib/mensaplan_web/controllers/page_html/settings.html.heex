<.flash_group flash={@flash} />

<div class="mx-auto px-6 py-4 flex flex-col gap-8">
  <h1 class="text-3xl font-bold text-center">Settings</h1>

  <div class="flex items-center justify-center">
    <.avatar user={@user} class="mr-4" />
    <div>
      <h2 class="text-xl font-bold"><%= @user.name %></h2>
      <p :if={Map.has_key?(@user, :email)} class="text-gray-500"><%= @user.email %></p>
    </div>
  </div>

  <form action="/settings" method="post">
    <input type="hidden" name="_csrf_token" value={get_csrf_token()} />
    <.input
      type="checkbox"
      name="default_public"
      checked={@user.default_public}
      label="Make Positions public by default"
    />
    <div class="flex justify-center mt-12">
      <.button>
        Save Changes
      </.button>
    </div>
  </form>
</div>
